{
    "editor.minimap.enabled": false,
    "workbench.activityBar.visible": true,
    "workbench.colorTheme": "Solarized Light+",
    "editor.fontFamily": "Monaco",
    "breadcrumbs.enabled": false,
    "editor.tabSize": 2,
    "glsl-linter.validatorPath": "/usr/local/bin/glslangValidator",
    "glsl-linter.validatorArgs": [
        ""
    ],
    "terminal.integrated.fontFamily": "Monaco",
    "editor.highlightActiveIndentGuide": false,
    "editor.occurrencesHighlight": false,
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
        "editor.formatOnPaste": false
    },
    "workbench.statusBar.visible": true,
    "telemetry.enableTelemetry": false,
    "workbench.enableExperiments": false,
    "scm.diffDecorationsGutterVisibility": "hover",
    "editor.foldingStrategy": "indentation",
    "editor.overviewRulerBorder": false,
    "scm.diffDecorationsGutterWidth": 1,
    "editor.lineNumbers": "off",
    "search.showLineNumbers": true,
    "editor.glyphMargin": false,
    "editor.showFoldingControls": "always",
    "javascript.updateImportsOnFileMove.enabled": "always",
    "diffEditor.renderSideBySide": false,
    "scm.diffDecorations": "none",
    "ruby.useBundler": true,
    "editor.colorDecorators": true,
    "editor.fontSize": 14,
    "debug.console.fontSize": 14,
    "terminal.integrated.fontSize": 14,
    "ruby.specCommand": "bin/spring rspec",
    "vim.useSystemClipboard": true,
    "vim.leader": "<space>",
    "vim.normalModeKeyBindingsNonRecursive": [
        {
          "before": ["<leader>", "t"],
          "commands": ["extension.runFileSpecs"]
        },
        {
          "before": ["<leader>", "l"],
          "commands": ["extension.runSpecLine"]
        },
        {
          "before": ["<leader>", "p"],
          "commands": ["projectManager.listProjects"]
        },
        {
          "before": ["<leader>", "g", "c"],
          "commands": ["git.checkout"]
        },
        {
            "before": ["<leader>", "a"],
            "commands": [
                "alternate.alternateFile",
            ]
        }
    ],
    "editor.tokenColorCustomizations": {
        "[Solarized Light+]": {

        }
    },
    "ruby.lint": {
        "rubocop": {
            "useBundler": true // enable rubocop via bundler
        }
    },
    "ruby.specSaveFile": true,
    "solargraph.folding": false,
    "ruby.rctComplete.commandPath": "/usr/local/bin/rct-complete",
    "solargraph.hover": false,
    "editor.quickSuggestions": {
        "other": true,
        "comments": false,
        "strings": false
    },
    "editor.snippetSuggestions": "none",
    "editor.suggest.localityBonus": true,
    "editor.suggestSelection": "first",
    "gitlab.instanceUrl": "https://git.saltedge.com",
    "gitlab.remoteName": "main",
    "gitlab.pipelineGitRemoteName": "origin",
    "extensions.ignoreRecommendations": false
}