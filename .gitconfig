[color]
  status = always

[alias]
  aa = add .
  lg = !tig
  st = status -sb
  cm = commit --verbose
  co = checkout
  df = diff --color
  dc = diff --color --cached
  ph = push
  pl = pull
  sw = show --color
  lc = !git ls-files | grep "^$1" | xargs wc -l
  this    = !git init && git add . && git commit -m \"initial commit\"
  sync    = pull main master
  rhh     = reset HEAD --hard

[user]
  name = Andrei Lisnic
  email = andrei.lisnic@gmail.com
[push]
  default = matching
