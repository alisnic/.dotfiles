[color]
  status = always

[alias]
  aa = add .
  ap = add --patch
  st = status -sb
  cm = commit
  co = checkout
  cp = cherry-pick
  df = diff --color
  dc = diff --color --cached
  ph = push
  lg = log --pretty=oneline --abbrev-commit
  pl = pull
  sw = show --color
  this = !git init && git add . && git commit -m \"initial commit\"
  rhh  = reset HEAD --hard
  find-merge = "!sh -c 'commit=$0 && branch=${1:-HEAD} && (git rev-list $commit..$branch --ancestry-path | cat -n; git rev-list $commit..$branch --first-parent | cat -n) | sort -k2 -s | uniq -f1 -d | sort -n | tail -1 | cut -f2'"

[user]
  name = Andrei Lisnic
  email = andrei.lisnic@gmail.com
[push]
  default = matching
[difftool]
	prompt = false
[mergetool]
	prompt = false
[diff]
	tool = vimdiff
[core]
	excludesfile = /Users/andrei/.gitignore_global
	pager = less -+F
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path =
[mergetool "sourcetree"]
	cmd = /Users/andrei/Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
