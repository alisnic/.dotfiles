[color]
  status = always

[alias]
  aa = add .
  lg = !tig
  st = status -sb
  cm = commit
  co = checkout
  df = diff --color
  dc = diff --color --cached
  ph = push
  pl = pull --rebase
  sw = show --color
  lc = !git ls-files | grep "^$1" | xargs wc -l
  ignore  = !([ ! -e .gitignore ] && touch .gitignore) | echo $1 >>.gitignore
  this    = !git init && git add . && git commit -m \"initial commit\"

