#!/usr/bin/env ruby

origin = `git remote -v | grep origin`

if origin.include?("github")
  repo = origin.split("\n").first.split(" ")[1].split(":")[1].split(".").first
  branch = `git symbolic-ref --short HEAD`
  system "open https://github.com/#{repo}/compare/#{branch}"
end

if origin.include?("saltedge")
  repo = origin.split("\n").first.split(" ")[1].split(":")[1].split(".").first
  system "open https://git.saltedge.com/#{repo}/merge_requests/new"
end
